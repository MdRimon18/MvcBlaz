@using Domain.Entity.Settings
@model Customers

<div class="col-lg-12 ps-lg-2 mb-2">
    <div class="row g-0 h-100 align-items-stretch">
        <div class="col-lg-12 mb-2">
            <div class="card-body bg-body-tertiary pb-0">
                <div class="collapse show">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0" data-anchor="data-anchor">
                                <a class="btn btn-falcon-default btn-sm" href="@Url.Action("Index", "Customer")"><i class="fas fa-arrow-left"></i></a>
                                Customer Profile Entry
                            </h5>
                        </div>
                        <form asp-action="SaveOrUpdate" method="post" enctype="multipart/form-data">
                            <div class="card-body bg-body-tertiary">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="name" class="form-label fw-semi-bold">Enter Name<span class="error-star">*</span></label>
                                                <input asp-for="CustomerName" type="text" class="form-control form-control-sm form-rounded" placeholder="Enter Name" />
                                                <span asp-validation-for="CustomerName" class="text-left invalid-message-color"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="mobileNumber" class="form-label fw-semi-bold">Mobile Number<span class="error-star">*</span></label>
                                                <input asp-for="MobileNo" name="mobileNumber" type="tel" class="form-control form-control-sm form-rounded" placeholder="Enter Mobile Number" />
                                                <span asp-validation-for="MobileNo" class="text-left invalid-message-color"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="email" class="form-label fw-semi-bold">Email</label>
                                                <input asp-for="Email" name="email" class="form-control form-control-sm form-rounded" placeholder="Write Email" />
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="selectCountry" class="form-label fw-semi-bold">Select Country<span class="error-star">*</span></label>
                                                <select asp-for="CountryId" class="form-select form-rounded form-select-sm">
                                                    <option value="">Select Country</option>
                                                    @foreach (var item in ViewBag.CountryList as List<CountryV2>)
                                                    {
                                                        <option value="@item.CountryId">@item.CountryName</option>
                                                    }
                                                </select>
                                                <span asp-validation-for="CountryId" class="text-left invalid-message-color"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-8 col-md-8">
                                            <div class="card-header">
                                                <h5 class="mb-0">Upload Image</h5>
                                            </div>
                                            <div class="image-uploader">
                                                <div class="image-preview">
                                                    <img src="@Model.CustImgLink" alt="Selected Image" style="width: 160px;height: 160px;" />
                                                    @if (!string.IsNullOrEmpty(Model.CustImgLink))
                                                    {
                                                        <button type="button" class="remove-button" onclick="document.getElementById('fileInput').value = '';">X</button>
                                                    }
                                                </div>
                                                <input asp-for="CustImgLink" type="file" class="file-input form-control form-control-sm form-rounded mt-2" id="fileInput" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="stateName" class="form-label fw-semi-bold">State Name</label>
                                                <input asp-for="StateName" name="stateName" type="text" class="form-control form-control-sm form-rounded" placeholder="Enter Your State Name" />
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="occupation" class="form-label fw-semi-bold">Occupation</label>
                                                <input asp-for="Occupation" name="occupation" type="text" class="form-control form-control-sm form-rounded" placeholder="Occupation" />
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="officeName" class="form-label fw-semi-bold">Office Name</label>
                                                <input asp-for="OfficeName" name="officeName" type="text" class="form-control form-control-sm form-rounded" placeholder="Office Name" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="addressLineOne" class="form-label fw-semi-bold">Address One</label>
                                                <textarea asp-for="CustAddrssOne" rows="2" class="form-control form-control-sm form-rounded" placeholder="Customer Address One"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label for="addressLineTwo" class="form-label fw-semi-bold">Address Two</label>
                                                <textarea asp-for="CustAddrssTwo" rows="2" class="form-control form-control-sm form-rounded" placeholder="Customer Address Two"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-sm mt-2" type="submit">@ViewBag.SubmitButtonText</button>
                                <button type="reset" class="btn btn-primary btn-sm mt-2">Refresh</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="border-dashed-bottom my-4"></div>
            </div>
        </div>
    </div>
</div>