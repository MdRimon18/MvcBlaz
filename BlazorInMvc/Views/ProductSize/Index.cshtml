 
<div class="row g-0 bg-light dark__bg-1000 mt-3">
    <!-- Left Section: List -->
    <div class="col-md-4 col-lg-4 border-end p-3">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 text-dark dark__text-light">Size List <strong>(10)</strong></h5>
            <button class="btn btn-sm btn-outline-primary">New</button>
        </div>

        <!-- Search -->
        <div class="input-group input-search-width mb-3">
            <input class="form-control form-control-sm shadow-none form-rounded w-95"
                   type="search"
                   placeholder="Search by name"
                   aria-label="search" />
            <button class="btn btn-sm btn-outline-primary">
                @*  <i class="fa fa-search"></i> *@
                Search
            </button>
        </div>


        <!-- Items List -->
        <div class="list-group">
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">Pcs</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">kg</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">Set</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">Set</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">Set</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
            <p class="d-flex justify-content-between align-items-center border-bottom py-2 mb-0">
                <span class="text-dark dark__text-light">Set</span>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit me-1"></i>
                </button>
            </p>
        </div>


    </div>

    <!-- Right Section: Form -->
    <div class="col-md-8 col-lg-8 p-4">
        <h5 class="mb-4 text-dark dark__text-light">Event Details</h5>
        <form>
            <div class="row gx-2">
                <!-- Event Title -->
                <div class="col-12 mb-3">
                    <label class="form-label text-dark dark__text-light" for="event-name">Event Title</label>
                    <input class="form-control shadow-none bg-white dark__bg-1100 text-dark dark__text-light"
                           id="event-name"
                           type="text"
                           placeholder="Event Title" />
                </div>


                <!-- Divider -->
                <div class="col-12">
                    <div class="border-bottom border-dashed my-3"></div>
                </div>

                <!-- Buttons -->
                <div class="col-12 text-end">
                    <button type="button" class="btn btn-primary btn-sm me-2">Save</button>
                    <button type="button" class="btn btn-primary btn-sm me-2">Update</button>
                    <button type="button" class="btn btn-secondary btn-sm me-2">Refresh</button>
                    <button type="button" class="btn btn-danger btn-sm">Delete</button>
                    @*  <button type="button" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash me-1"></i> 
                    </button> *@
                </div>
            </div>
        </form>
    </div>
</div>
